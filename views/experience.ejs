<!DOCTYPE html>
<html lang="en">
<%- include('include/head.ejs') %>

    <body>
        <%- include('include/header.ejs') %>
            <div class="container p-5 shadow-lg">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                        <header>
                            <h2 class="mb-4">Experience</h2>
                            <p class="lead">API JSON<a href="./api/experience" class="p-3"><i
                                    class="bi bi-box-arrow-up-right"></i></a></p>
                        </header>
                        <article>
                            <% experience_content.forEach(experience => { %>
                                <div class="row">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                                        <div class="row">
                                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                                                <h3>
                                                    <%= experience.experience_description %>
                                                    <% if (experience.url !== '' ) { %>
                                                        <a href="<%= experience.url %>"><i class="bi bi-box-arrow-up-right"></i></a>
                                                        <% }; %>
                                                </h3>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                                                <% experience.experience_paragraphs.forEach(experience_paragraph => { %>
                                                    <p><%= experience_paragraph %></p>
                                                    <% }); %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <% }); %>
                        </article>
                    </div>
                </div>
            </div>
    </body>

</html>