<!DOCTYPE html>
<html lang="en">
<%- include('include/head.ejs') %>
    <body>
        <%- include('include/header.ejs') %>
            <div class="container p-5 shadow-lg">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                        <header>
                            <h2 class="mb-4">Skill</h2>
                            <p class="lead">API JSON<a href="./api/skill" class="p-3"><i class="bi bi-box-arrow-up-right"></i></a></p>
                        </header>
                        <article>
                            <% skill_content.forEach(skill => { %>
                                <span class="badge rounded-pill bg-primary col-xl-3 col-lg-3 col-md-5 col-sm-5 m-2 p-2"><%= skill %></span>
                            <% }); %>
                        </article>
                    </div>
                </div>
            </div>
    </body>
</html>