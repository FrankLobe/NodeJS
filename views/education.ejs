<!DOCTYPE html>
<html lang="en">
<%- include('include/head.ejs') %>
    <body>
        <%- include('include/header.ejs') %>
            <div class="container p-5 shadow-lg">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                        <header>
                            <h2 class="mb-4">Education</h2>
                            <p class="lead">API JSON<a href="./api/education" class="p-3"><i class="bi bi-box-arrow-up-right"></i></a></p>
                        </header>
                        <article>
                            <% education_content.forEach(educational_program => { %>
                                <div class="row">
                                    <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                                        <div class="row">
                                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                                                <p><%= educational_program.year %></p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12">
                                        <div class="row">
                                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                                                <h3><%= educational_program.program %></h3>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
                                            <a class="text-primary align-middle pt-5" href="<%= educational_program.url %>" target="_blank"><img
                                                    class="img-fluid mt-3" alt="logo"
                                                    src="images/<%= educational_program.logo %>" /></a>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                        </article>
                    </div>
                </div>
            </div>
    </body>
</html>